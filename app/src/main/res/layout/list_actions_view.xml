<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top border -->
    <View
        android:id="@+id/v_conversation_list_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/people_picker__border_line__height"
        android:layout_gravity="top"
        android:background="@color/separator_dark"
        />

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__list_actions__avatar"
        android:layout_width="@dimen/conversation_list__action_icon__size"
        android:layout_height="@dimen/conversation_list__action_icon__size"
        android:layout_marginStart="@dimen/wire__padding__10"
        android:layout_marginEnd="@dimen/wire__padding__10"
        android:layout_gravity="left|center_vertical"
        android:text="@string/glyph__people"
        android:textColor="@color/text__primary_dark"
        android:textSize="@dimen/wire__icon_button__text_size"
        android:gravity="center"
        />

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__list_actions__settings"
        android:layout_width="@dimen/conversation_list__action_icon__size"
        android:layout_height="@dimen/conversation_list__action_icon__size"
        android:layout_marginStart="@dimen/wire__padding__10"
        android:layout_marginEnd="@dimen/wire__padding__10"
        android:text="@string/glyph__archive"
        android:textSize="@dimen/wire__icon_button__text_size"
        android:textColor="@color/text__primary_dark"
        android:gravity="center"
        android:layout_gravity="right|center_vertical"
        />

</merge>
