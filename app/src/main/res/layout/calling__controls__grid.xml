<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="3"
    android:rowCount="2"
    android:layout_gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/mute_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:circleIconDimension="@dimen/calling__controls__button__dimension"
        app:labelWidth="@dimen/calling__controls__button_label__dimension"
        app:labelFont="@string/wire__typeface__light"
        app:labelTextSize="@dimen/wire__text_size__smaller"
        android:paddingBottom="@dimen/calling__controls__button__margin_bottom"
        />

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/video_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        app:circleIconDimension="@dimen/calling__controls__button__dimension"
        app:labelWidth="@dimen/calling__controls__button_label__dimension"
        app:labelFont="@string/wire__typeface__light"
        app:labelTextSize="@dimen/wire__text_size__smaller"
        android:paddingBottom="@dimen/calling__controls__button__margin_bottom"
        />

    <!-- speaker and flip buttons use the same position -->
    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/speaker_flip_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:circleIconDimension="@dimen/calling__controls__button__dimension"
        app:labelWidth="@dimen/calling__controls__button_label__dimension"
        app:labelFont="@string/wire__typeface__light"
        app:labelTextSize="@dimen/wire__text_size__small"
        android:paddingBottom="@dimen/calling__controls__button__margin_bottom"
        />

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/reject_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        app:circleIconDimension="@dimen/calling__controls__button__dimension"
        app:labelWidth="@dimen/calling__controls__button_label__dimension"
        />

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/end_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        app:circleIconDimension="@dimen/calling__controls__button__dimension"
        app:labelWidth="@dimen/calling__controls__button_label__dimension"
        />

    <com.waz.zclient.calling.views.CallControlButtonView
        android:id="@+id/accept_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:circleIconDimension="@dimen/calling__controls__button__dimension"
        app:labelWidth="@dimen/calling__controls__button_label__dimension"
        />
</GridLayout>
