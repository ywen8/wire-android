<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.waz.zclient.common.views.ChatheadView
        android:id="@+id/chv__other_user_chathead"
        android:layout_width="@dimen/calling__controls__button__dimension"
        android:layout_height="@dimen/calling__controls__button__dimension"
        app:show_border="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wire__padding__regular"
        android:orientation="vertical"
        >

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__calling__header__name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wire__padding__tiny"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/text__primary_dark"
            android:textSize="@dimen/wire__text_size__regular"
            app:w_font="@string/wire__typeface__medium"
            />

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__calling__header__subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textColor="@color/text__primary_dark"
            android:textSize="@dimen/wire__text_size__regular"
            app:w_font="@string/wire__typeface__light"
            />

    </LinearLayout>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__calling__header__bitrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wire__padding__small"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/text__primary_dark"
        android:textSize="@dimen/wire__text_size__regular"
        android:visibility="gone"
        app:w_font="@string/wire__typeface__light"
        />
</merge>

