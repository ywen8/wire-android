<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:clickable="true"
              android:focusable="true" >

    <com.waz.zclient.views.images.TouchImageView
        android:id="@+id/tiv__image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/collections_header_background">

        <com.waz.zclient.ui.text.GlyphTextView
            android:id="@+id/gtv__share_button"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wire__text_size__medium"
            android:text="@string/glyph__share"/>

    </RelativeLayout>

</LinearLayout>
